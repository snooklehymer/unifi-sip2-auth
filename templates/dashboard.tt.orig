[% INCLUDE templates/header.tt %]

<body>
    <div class="container">
    <div class="jumbotron">
    [% FOREACH line IN config %]
    <form class="form-horizontal" role="form" action="update-config.pl">
      <div class="form-group">
        <label for="sitename" class="col-sm-3 control-label">Sitename</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="sitename" value="[% line.sitename %]" placeholder="Sitename">
        </div>
      </div>
      <div class="form-group">
        <label for="enable_sip" class="col-sm-3 control-label">Enable SIP</label>
        <div class="col-sm-3">
            <select name="enable_sip" class="form-control">
                [% IF line.enable_sip_validation == "1" %]
                    <option value="1" selected>Enabled</option>
                    <option value="0">Disabled</option>
                [% ELSE %]
                    <option value="0" selected>Disabled</option>
                    <option value="1">Enabled</option>
                [% END %]
            </select>
        </div>       
      </div>
      <div class="form-group">
        <label for="sip_server" class="col-sm-3 control-label">SIP Server</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="sip_server"  value="[% line.sip_server %]" placeholder="SIP Server">
        </div>
      </div>
      <div class="form-group">
        <label for="sip_port" class="col-sm-3 control-label">SIP Port</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" id="sip_port"  value="[% line.sip_port %]" placeholder="SIP Port">
        </div>
      </div>
      <div class="form-group">
        <label for="sip_user" class="col-sm-3 control-label">SIP User</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="sip_user"  value="[% line.sip_user %]" placeholder="SIP User">
        </div>
      </div>
      <div class="form-group">
        <label for="sip_pass" class="col-sm-3 control-label">SIP Password</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="sip_pass"  value="[% line.sip_pass %]" placeholder="SIP Pass">
        </div>
      </div>
      <div class="form-group">
        <label for="sip_use_pin" class="col-sm-3 control-label">Validate SIP PIN</label>
      <div class="col-sm-3">
            <select name="sip_use_pin" class="form-control">
                [% IF line.sip_use_pin == "1" %]
                    <option value="1" selected>Yes</option>
                    <option value="0">No</option>
                [% ELSE %]
                    <option value="0" selected>No</option>
                    <option value="1">Yes</option>
                [% END %]
            </select>
        </div>  
      </div>
      <div class="form-group">
        <label for="sip_auth_login" class="col-sm-3 control-label">SIP Requires Auth</label>
      <div class="col-sm-3">
            <select name="sip_auth_login" class="form-control">
                [% IF line.sip_auth_login == "1" %]
                    <option value="1" selected>Yes</option>
                    <option value="0">No</option>
                [% ELSE %]
                    <option value="0" selected>No</option>
                    <option value="1">Yes</option>
                [% END %]
            </select>
        </div> 
      </div>
       <div class="form-group">
            <label for="sip_send_char" class="col-sm-3 control-label"><a title="This is the character used to send the SIP command. CR is the most common. Change if SIP response is slow">SIP Send Character</a></label>    
	<div class="col-sm-3">
            <select name="sip_send_char" class="form-control">
             
               <option value="CR" selected=selected>CR</option>
               <option value="NL" >NL</option>
             
            </select>
        </div>  
	</div>
      <div class="form-group">
        <label for="sip_pass" class="col-sm-3 control-label">SIP Password</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="sip_pass"  value="[% line.sip_pass %]" placeholder="SIP Pass">
        </div>
      </div>
      <div class="form-group">
        <label for="sip_pass" class="col-sm-3 control-label">SIP Password</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="sip_pass"  value="[% line.sip_pass %]" placeholder="SIP Pass">
        </div>
      </div>
      <div class="form-group">
        <label for="sip_pass" class="col-sm-3 control-label">SIP Password</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="sip_pass"  value="[% line.sip_pass %]" placeholder="SIP Pass">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 ">
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </div>
    </form>
[% END %]

    </div> 
    </div>
    [% USE Dumper %]
    [% Dumper.dump(config) %]
</body>